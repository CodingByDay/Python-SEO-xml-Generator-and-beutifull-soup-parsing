@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}


<div class="register-loginbox">
    <h3>Reset your password.</h3>
    
    <form asp-route-returnurl="@ViewData["ReturnUrl"]" id="basic-form1" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<form id="basic-form1" method="post" novalidate="">*@
        <div class="form-group">         
            <input asp-for="Email" class="form-control field" placeholder="Email"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
          
            <input asp-for="Password" class="form-control field" placeholder="Password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
           
            <input asp-for="ConfirmPassword" class="form-control field" placeholder="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary" style=" background: linear-gradient(to left, #c28630 30%, #e6bc77);
    border-radius: 25px;
    color: #fff;
    font-size: 17px;
    font-weight: 300;
    border: none;
    margin-top: 20px;
    margin-bottom: 15px;">
                Reset
            </button>
        </div>
    </form>
</div>
<div class="bottomline-signup">
    <ul class="list-unstyled">
        <li>
            <span>Already have an account?</span> <a asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]"><u> LogIn</u></a>
        </li>
    </ul>
</div>
