@model Emmares4.Models.HomeViewModels.WithdrawlViewModel

@{
    ViewData["Title"] = "Withdrawl";
    
}

<h1 class="sr-only">Dashboard</h1>
<div class="dashboard-section">
    <div class="section-heading clearfix">
        <h2 class="section-title">EMA Withdraw</h2>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <div class="panel white-box">
                <div class="panel-content">

                    <h4 class="form-title">
                        Transfer EMA to your wallet address. You
                        have <strong>@Model.Balance EMA</strong> available.
                    </h4>
                    <form id="basic-form" method="post" novalidate="">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Destination ETH Address</label>
                                    <input asp-for="Address" class="form-control" readonly placeholder="Wallet Address" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Amount (EMA)</label>
                                    <input asp-for="Balance" class="form-control" readonly/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            @*<div class="col-md-6">
                                <div class="form-group">
                                    <label>Two-Factor Authentication Code</label>
                                    <input type="text" class="form-control"
                                           placeholder="Authentication Code">
                                </div>
                            </div>*@
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Address Label (Optional)</label>
                                    <input type="email" class="form-control" placeholder="Address Label">
                                </div>
                            </div>
                        </div>


                        <button type="submit" class="btn btn-primary">Withdraw</button>
                    </form>

                </div>
            </div>
        </div>
    </div>

</div>
