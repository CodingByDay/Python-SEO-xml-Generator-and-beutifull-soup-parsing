@model Emmares4.Models.HomeViewModels.MySubscriptionViewModel

<h2 class="heading padding-l-0">@Model.Favorite<p class="yellowtag">PROVIDERS</p></h2>
<div class="pre-scrollable">
    <ul class="list-unstyled list large favioratelist ">
        @foreach (var item in Model.Subscriptions)
        {
            <li>
                @if (item.IsSubscribed)
                {
                    <strong>@item.Name<span class="pull-right">@item.AverageRating</span></strong>
                }
                else
                {
                    @item.Name<span class="pull-right">@item.AverageRating</span>
                }
                <span class="pull-right right-delete-action1">
                    <a href='@Url.Action("Unsubscribe", "Home")?ProviderID=@item.ProviderID&FieldID=@item.FieldID'><img src="~/images/icon_list.svg" alt="s"></a>
                </span>
            </li>
        }
    </ul>
</div>
<div class="text-center" style="margin-top: 20px;">
    <i class="fas fa-chevron-down"></i>
</div>
