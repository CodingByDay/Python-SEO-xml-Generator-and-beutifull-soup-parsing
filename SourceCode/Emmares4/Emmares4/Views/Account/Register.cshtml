@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="register-loginbox">
    <h2>Sign up.</h2>
    <form asp-route-returnurl="@ViewData["ReturnUrl"]" id="basic-form1" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">

            <input asp-for="FirstName" class="form-control field" placeholder="First Name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
            @*<input type="email" class="form-control field" placeholder="Email Address">*@
        </div>
        <div class="form-group">

            <input asp-for="LastName" class="form-control field" placeholder="Last Name" />
            <span asp-validation-for="LastName" class="text-danger"></span>
            @*<input type="email" class="form-control field" placeholder="Email Address">*@
        </div>
        <div class="form-group">
            <input asp-for="Email" class="form-control field" placeholder="Email Address" />
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control field" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-bottom:10px">
            <input asp-for="ConfirmPassword" class="form-control field" placeholder="Confirm Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-bottom:10px">
            <span style="color:grey">
                @Html.RadioButtonFor(m => m.IsMarketeer, "True")@Html.Label("Marketeer")
                <span style="margin:10px"></span>
                @Html.RadioButtonFor(m => m.IsMarketeer, "False")@Html.Label("Recipient")
            </span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary" style=" background: linear-gradient(to left, #c28630 30%, #e6bc77);
    border-radius: 25px;
    color: #fff;
    font-size: 17px;
    font-weight: 300;
    border: none;
    margin-top: 10px;
    margin-bottom: 5px;">
                Sign up
            </button>
        </div>
    </form>
</div>
<div class="bottomline-signup">
    <ul class="list-unstyled">
        <li>
            <span>Already have an account?</span> <a asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]"><u> LogIn</u></a>
        </li>
    </ul>
</div>
@section Scripts {
    <style type="text/css">
        input[type="radio"] {
            margin-right: 5px;
        }
    </style>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}