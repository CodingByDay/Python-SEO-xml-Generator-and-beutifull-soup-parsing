@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="register-loginbox">
    <h3>@ViewData["Title"]</h3>
    <!--<h4>Enter your email.</h4>-->
    <!--<hr />-->
            <form asp-action="ForgotPassword" id="basic-form1" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control field" placeholder="Enter Your Email Address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" style=" background: linear-gradient(to left, #c28630 30%, #e6bc77);
    border-radius: 25px;
    color: #fff;
    font-size: 17px;
    font-weight: 300;
    border: none;
    margin-top: 20px;
    margin-bottom: 15px;">
                    Reset
                </button>
            </form>
</div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
