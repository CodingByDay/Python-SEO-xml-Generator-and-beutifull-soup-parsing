@model IEnumerable<Emmares4.Models.CampaignViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section cls { class="gray-main-content" }

@section Scripts {
    <script>
        function GetDetails() {

        }
    </script>
}

<h1 class="sr-only">Campaigns</h1>
<div class="dashboard-section">
    <div class="section-heading clearfix">
        <h2 class="section-title">Campaigns</h2>
    </div>
    <div class="row">
        <div class="col-md-12 id=" exploreBox"">
            @*<a asp-action="Create">Create New</a>*@
            <a asp-action="Create" class="btn btn-primary theme-btn"><span><i class="fas fa-plus"></i></span> New Campaign</a>
            <div class="panel white-box scrollable-panel">
                <div class="panel-content">
                    <div class="table-responsive comapaintable">
                        <table class="table table-fixed">
                            <thead>
                                <tr>
                                    <th width="17%">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th width="14%">
                                        @Html.DisplayNameFor(model => model.Field)
                                    </th>
                                    <th width="15%">
                                        @Html.DisplayNameFor(model => model.Region)
                                    </th>
                                    <th width="10%">
                                        @Html.DisplayNameFor(model => model.Genre)
                                    </th>
                                    <th width="10%">
                                        @Html.DisplayNameFor(model => model.Recipients)
                                    </th>
                                    <th width="8%">
                                        @Html.DisplayNameFor(model => model.Budget)
                                    </th>
                                    <th width="12%">
                                        @Html.DisplayNameFor(model => model.Remaining)
                                    </th>
                                    <th width="12%">
                                        @Html.DisplayNameFor(model => model.AddedOn)
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr href='@Url.Action("Campaign","Details", new { item.ID })'>
                                        <td width="17%">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td width="14%">
                                            @Html.DisplayFor(modelItem => item.Field)
                                        </td>
                                        <td width="15%">
                                            @Html.DisplayFor(modelItem => item.Region)
                                        </td>
                                        <td width="10%">
                                            @Html.DisplayFor(modelItem => item.Genre)
                                        </td>
                                        <td width="10%">
                                            @Html.DisplayFor(modelItem => item.Recipients)
                                        </td>
                                        <td width="8%">
                                            @Html.DisplayFor(modelItem => item.Budget)
                                        </td>
                                        <td width="12%">
                                            @Html.DisplayFor(modelItem => item.Remaining)
                                        </td>
                                        <td width="12%">
                                            @item.AddedOn.ToShortDateString()
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
